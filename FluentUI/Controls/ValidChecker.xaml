<UserControl x:Class="FluentUI.Controls.ValidChecker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FluentUI.Controls"
             mc:Ignorable="d" Height="20" Width="20"
             >
    <UserControl.Resources>
        <SolidColorBrush x:Key="back_0078D4" Color="#0078D4"></SolidColorBrush>
        <Style x:Key="b_s" TargetType="Border">
            <Setter Property="Background" Value="#19FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Border x:Name="hi_f" Background="White" Style="{StaticResource b_s}" Width="{Binding ActualHeight, ElementName=userControl, Mode=OneWay}">

        </Border>
        <Border x:Name="ch_t" Background="{StaticResource back_0078D4}" Style="{StaticResource b_s}" Width="{Binding ActualHeight, ElementName=userControl, Mode=OneWay}">
            <Label Content="&#xe73e;" FontFamily="/Font/SegoeFluentIcons.ttf #Segoe Fluent Icons"></Label>
        </Border>
    </Grid>
</UserControl>
